
import java.io.*;
import java.util.*;
public class Main {
    public static void main(String args[]) {
        // your code here
        int i,j;
        
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        
        long sum = 0;
        for(i=1;i<=n;i++){
            //int a = sc.nextInt();
            sum = sum + i;
        } 
        System.out.println(sum);
    }
}

